@model Internet.Models.FAQ
<fieldset>
    <legend>FAQ</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.Question_ru)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Question_ru)
        @Html.ValidationMessageFor(model => model.Question_ru)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Answer_ru)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Answer_ru, new { @class = "redactor" })
        @Html.ValidationMessageFor(model => model.Answer_ru)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Question_ua)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Question_ua)
        @Html.ValidationMessageFor(model => model.Question_ua)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Answer_ua)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Answer_ua, new { @class = "redactor" })
        @Html.ValidationMessageFor(model => model.Answer_ua)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Question_en)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Question_en)
        @Html.ValidationMessageFor(model => model.Question_en)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Answer_en)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Answer_en, new { @class = "redactor" })
        @Html.ValidationMessageFor(model => model.Answer_en)
    </div>
    <br />
    <p>
        @Html.CheckBoxFor(model => model.ShowOnPartnerPanel)
        Show on partner panel
    </p>
    <br />
    <p>
        <input type="submit" value="Submit" />
    </p>
</fieldset>
