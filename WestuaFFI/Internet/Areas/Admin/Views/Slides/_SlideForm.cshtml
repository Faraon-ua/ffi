@model Internet.Models.Slide

 @Html.ValidationSummary(true)
    <fieldset>
        <legend>Slide</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description_ua)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description_ua, new { @class = "redactor" })
            @Html.ValidationMessageFor(model => model.Description_ua)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description_ru)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description_ru, new { @class = "redactor" })
            @Html.ValidationMessageFor(model => model.Description_ru)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description_en)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description_en, new { @class = "redactor" })
            @Html.ValidationMessageFor(model => model.Description_en)
        </div>
        Image
        <input type="file" name="slideImg" id="slideImg" accept="image/x-png, image/gif, image/jpeg" />
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>