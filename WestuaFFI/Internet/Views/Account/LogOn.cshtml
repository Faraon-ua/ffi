@model Internet.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}
<h2>
    @Resources.labels.LogOn</h2>
<p>
    
   @Html.Raw(Resources.labels.LogOnText)
</p>
@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Log on was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-block alert-error" })
    <fieldset>
        <legend></legend>
        <div class="control-group">
            <div class="control-label">
                @Resources.labels.UserName
            </div>
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName, new { @class = "required" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Resources.labels.Password
            </div>
            <div class="controls">
                @Html.PasswordFor(m => m.Password, new { @class = "required" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Resources.labels.RememberMe
            </div>
            <div class="controls">
                @Html.CheckBoxFor(m => m.RememberMe)
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" value="@Resources.labels.LogOn" class="btn btn-primary" />
            @Html.ActionLink(Resources.labels.ForgotPassword, "PasswordReset", "Account", null, new {@class="pull-right blue"})
        </div>
    </fieldset>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
