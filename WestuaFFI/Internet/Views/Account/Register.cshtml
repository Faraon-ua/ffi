@model Internet.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-block alert-error" })
    <fieldset>
        <legend><h2>@Resources.labels.NewAccountTitle</h2></legend>
        <div class="field-validation-error text-justify">
            @Html.Raw(string.Format(Resources.labels.RegistrationHint, Html.ActionLink(Resources.labels.BusinessHint, "Business", "Articles", null, new { @class = "blue" }), Html.ActionLink(Resources.labels.Contacts, "Contacts", "Home", null, new { @class = "blue" })))
        </div>  
        <br/>
        <div class="control-group">
            <div class="control-label">
                @Resources.labels.UserName
            </div>
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName, new { @class = "required" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Resources.labels.EmailAddress                
            </div>
            <div class="controls">
                @Html.TextBoxFor(m => m.Email, new { @class = "required email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Resources.labels.Password
            </div>
            <div class="controls">
                @Html.PasswordFor(m => m.Password, new { @class = "required" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Resources.labels.ConfirmPassword
            </div>
            <div class="controls">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "required" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" value="@Resources.labels.btnRegister" class="btn btn-primary" />
        </div>
    </fieldset>
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>