<ul class="nav pull-right username">
    @if (Request.IsAuthenticated)
    {

        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name
            <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink(@Resources.labels.PartnerPanel, "Edit", "Partners", new { id = User.Identity.Name }, null)
                </li>
                <li>@Html.ActionLink(@Resources.labels.AccountChangePassword, "ChangePassword", "Account")
                </li>
                <li>@Html.ActionLink(@Resources.labels.LogOff, "LogOff", "Account") </li>
            </ul>
        </li>
    }
    else
    {

        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resources.labels.Guest
            <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink(@Resources.labels.LogOn, "LogOn", "Account") </li>
                <li>@Html.ActionLink(@Resources.labels.NewAccountTitle, "Business", "Articles")
                </li>
            </ul>
        </li>
    }
</ul>
